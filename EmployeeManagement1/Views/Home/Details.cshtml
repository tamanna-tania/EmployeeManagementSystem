@model HomeIndexViewModel

@{
    //Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Employee Details";
}

<div class="row justify-content-center m-3">
    <div class="col-sm-8">
     
        <h1 class="text-center">@Model.PageTitle</h1><br />
        <div class="card">
            <div class="card-header"><h1>@Model.Employee.Name</h1></div>
        </div>
        <div class="card-body text-center">
           
            @{
                var photopath = "~/images/" + (Model.Employee.PhotoPath ?? "images (1).jpg");
            }

            <img class="card-img-top imageThumbail" src="@photopath" asp-append-version="true" />
            <h4>mployee ID: @Model.Employee.Id</h4>
            <h4>Email: @Model.Employee.Email</h4>
            <h4>Department: @Model.Employee.Department</h4>
        </div>
        <div class="card-footer text-center">
            <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Back</a>
            @*<a href="#" class="btn btn-info">Edit</a>
            <a href="#" class="btn btn-danger">Delete</a>*@
        </div>
    </div>
</div>



@section Scripts{
    <script src="~/js/CustomScript.js"></script>
}